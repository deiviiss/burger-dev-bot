generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         String      @id @default(uuid())
  name       String
  image      String?
  products   Product[]
  promotions Promotion[]
}

model Product {
  id          String          @id @default(uuid())
  name        String
  description String
  price       Float
  image       String
  categoryId  String
  isAvailable Boolean         @default(true)
  createdAt   DateTime        @default(now())
  EventLog    EventLog[]
  orderItems  OrderItem[]
  category    Category        @relation(fields: [categoryId], references: [id])
  options     ProductOption[]
  branches    Branch[]        @relation("ProductBranches")
}

model ProductOption {
  id          String            @id @default(uuid())
  productId   String
  name        String
  price       Float
  type        ProductOptionType
  quantity    Int               @default(0)
  isAvailable Boolean           @default(true)
  product     Product           @relation(fields: [productId], references: [id])
}

model Branch {
  id        String    @id @default(uuid())
  name      String
  address   String
  phone     String
  hours     String?
  isOpen    Boolean   @default(true)
  phoneBot  String?
  phoneUser String?
  label     String    @unique
  urlMap    String?
  dayOff    String?
  slogan    String?
  social    Json?
  products  Product[] @relation("ProductBranches")
}

model Promotion {
  id                 String      @id @default(uuid())
  name               String
  description        String
  discountPercentage Float
  originalPrice      Float
  promoPrice         Float
  image              String
  isActive           Boolean     @default(true)
  categoryId         String
  createdAt          DateTime    @default(now())
  EventLog           EventLog[]
  orderItems         OrderItem[]
  category           Category    @relation(fields: [categoryId], references: [id])
}

model User {
  id          String   @id @default(uuid())
  name        String
  phoneNumber String   @unique
  email       String?  @unique
  role        Role     @default(USER)
  password    String?
  createdAt   DateTime @default(now())
  orders      Order[]
}

model Order {
  id         String      @id @default(uuid())
  shortId    String      @unique
  totalPrice Float
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  address    String
  comment    String?
  userId     String?
  user       User?       @relation(fields: [userId], references: [id])
  items      OrderItem[]
}

model OrderItem {
  id          String     @id @default(uuid())
  orderId     String
  productId   String?
  promotionId String?
  quantity    Int
  unitPrice   Float
  order       Order      @relation(fields: [orderId], references: [id])
  product     Product?   @relation(fields: [productId], references: [id])
  promotion   Promotion? @relation(fields: [promotionId], references: [id])
}

model EventLog {
  id          String     @id
  type        String
  createdAt   DateTime   @default(now())
  metadata    Json?
  productId   String?
  promotionId String?
  categoryId  String?
  Product     Product?   @relation(fields: [productId], references: [id])
  Promotion   Promotion? @relation(fields: [promotionId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
  CANCELLED
}

enum ProductOptionType {
  size
  ingredient
  variable
  note
  limited_ingredient
}
